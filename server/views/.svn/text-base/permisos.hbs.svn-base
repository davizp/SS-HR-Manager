	<div class="page-header"><h1>Solicitud de Permiso</h1></div>
	<form role="form" id = "form1" class="form-horizontal well" method="post" action="/permisos-data">		
		<div class="form-group">
			<label for="colaborador">Colaborador</label>
			{{{usuario}}}
		</div>

		<div class="form-group">        
			<label for="departamento">Departamento:</label>
			<select id = "departamento" name="dep"  class="form-control" disabled required>
				{{{departamento}}}
			</select> 
		</div>

		<div class="form-group">
			<label for="">Seleccione:</label><br/>
			<div class="btn-group" data-toggle="buttons">
				{{{radio}}}
			</div>
		</div>


		<div id = "gflotante" class="form-group" style = "display:none;">
			<label for="flotante">Ha Seleccionado <span class = "badge">Día Flotante</span>, Ingrese fecha en que trabajó:</label>
			<input type="text" id = "flotante" name="flo" class="datepicker-flotante form-control" pattern=".{5,}" required title="Ingrese una Fecha" placeholder="MM/DD/YYYY" autocomplete="off" readonly>
		</div>

		<div class="form-group">
			<label for="fpermiso">Fecha del Permiso:</label>
			<input type="text" id = "fpermiso" name = "fper" class="datepicker form-control" placeholder="MM/DD/YYYY" onchange = "fx_tconcedido($('#tconcedido2'))"  autocomplete="off" readonly required>
		</div>


