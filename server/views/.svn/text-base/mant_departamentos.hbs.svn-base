<!-- Modal -->
<div class="modal fade" id="modal_departamentos" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title" id="modal_departamentos_titulo" ></h4>
			</div>
			<div class="modal-body">
				<!-- FORMS ================================== -->
				<form role="form" id="form_departamentos" class="form-horizontal well" method="post" action="/departamentos-data">
					<div class="form-group">        
						<label for="departamento">Nombre del Departamento:</label>
						<input type="text" name="dep" class="form-control" id="departamento" placeholder="Departamento" onblur = "alerta($(this))" required>
					</div>

					<div class="form-group">        
						<label for="jefe">Jefe:</label>
						<select id = "jefe" name="jefe"  class="form-control">
							<option value="0" selected>Ninguno</option>
							{{{cmb_usr}}}
						</select> <br/>
					</div>
				</form>
				<!--/FORMS ================================== -->
			</div>
			<div class="modal-footer">
				<button id = "guardar" type="button" class="btn btn-danger" id="confirm" >Guardar</button>
				<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
			</div>
		</div>
	</div>
</div>
<!-- /Modal ________________________________________________________________________________________________________________________________________________________-->

