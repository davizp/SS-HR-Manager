<div class="modal fade" id="modal_nuevo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title" id="modal_eventos_titulo" >Evento</h4>
			</div>
			<div class="modal-body">
				<!-- FORMS ================================== -->
				<form role="form" id="form_eventos" class="well" method="post" action="#">
					<div class="form-group">
						<label for="no">Nombre del Evento:</label>
						<input type="text" name="no" class="form-control" placeholder="Evento" onblur = "alerta($(this))" required>
					</div>
					<div class="form-group">
						<label for="fi">Fecha Inicial del Evento:</label>
						<input type="text" id="startDate" name = "fi" class="form-control" placeholder="MM/DD/YYYY" autocomplete="off" onblur = "alerta($(this))" readonly required>
					</div>
					<div class="form-group">
						<label for="ff">Fecha Final del Evento:</label>
						<input type="text" id="endDate" name = "ff" class="form-control" placeholder="MM/DD/YYYY" autocomplete="off" onblur = "alerta($(this))" readonly required>
					</div>
					<div class="form-group">
						<label for="in">Detalle del Evento:</label>
						<div class="input-group">
							<span class="input-group-btn">
								<button class="btn btn-default" style="height:75px" data-icon="glyphicon-calendar" role="iconpicker"></button>
							</span>
							<textarea type="text" name="inf" style="height:75px" class="form-control" placeholder="Detalle del Evento" onblur = "alerta($(this))" required rows="3"></textarea>
						</div>
					</div>

				</form>
				<!--/FORMS ================================== -->
			</div>
			<div class="modal-footer">
				<button id = "guardar" type="button" class="btn btn-danger accion" id="confirm" >Guardar</button>
				<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
			</div>
		</div>
	</div>
</div>

